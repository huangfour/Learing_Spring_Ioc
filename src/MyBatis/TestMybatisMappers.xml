<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MyBatis.TestMybatis">

    <select id="findById" parameterType="Integer" resultType="MyBatis.account">
        select id,username,balance from account where id=#{id}
    </select>

    <select id="findByName" parameterType="String" resultType="MyBatis.account">
        select id,username,balance from account where username like '%${value}%'

    </select>

    <delete id="deleteById" parameterType="integer">
        delete from account where id=#{id}
    </delete>

    <insert id="insertAccount" parameterType="MyBatis.account">
        insert account(id,username,balance) values (#{id},#{username},#{balance})
    </insert>

</mapper>